# ruby/rails
alias srspec="spring rspec"
alias rsp="rspec"
alias rsf="rspec spec/features"
alias spr="spring rails s"
alias routes="rake routes"
alias coverage="COVERAGE=true rspec"
alias sandbox="rails c --sandbox"

# zsh & dotfiles
alias dotfiles="st ~/.dotfiles"
alias zshconfig="st ~/.dotfiles/zshrc"
alias ohmyzsh="st ~/.oh-my-zsh"

#websites
alias github="open http://github.com"


# git
alias g="git"
alias gbr="git remote prune origin && git branch -r"

# filesystem
alias ..="cd ../"
alias ...="cd ../.."
alias ....="cd ../../.."
alias ~='cd ~'
alias ls="ls -G"
alias mkdir="mkdir -p"

# misc.
alias timestamp="date +%Y%m%d%H%M%S"

#tmux
alias niam="mux niam"
alias work="mux workflow"
alias dirig="mux dirig"
alias tsession="tmux list-session"
alias tkill="tmux kill-session -t"
